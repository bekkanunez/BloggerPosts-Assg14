<div class="post">
  <article class="card">
    <div class="card-header flex-row">
      <h2>{{post.title}}</h2>
      <div>
        Posted on {{post.createdAt}} by {{post.User.username}}
      </div>
    </div>
    <div class="card-body">
      {{post.body}}
    </div>
  </article>

  {{#if post.Comments}}
    <section class="card">
      <div class="card-header">
        <h3>Comments</h3>
      </div>

      <div class="card-body">
        {{#each post.Comments}}
          <div>
            <p>
              {{body}}
            </p>
            <p>
              &mdash; {{User.username}}, {{format_date createdAt}}
            </p>
          </div>
        {{/each}}
      </div>
    </section>
  {{/if}}

  <form id="newComment" class="card">
    <div class="card-header">
      <h3>Add New Comment</h3>
    </div>

    <div class="card-body">
      <input type="hidden" name="commentId" value="{{post.id}}" />

      <label class="form-label" for="comment">Comment</label>

      <textarea name="commentText" class="form-input"></textarea>

      <button type="submit" class="btn">Submit</button>
    </div>
  </form>
</div>

<script src="/js/comment.js"></script>